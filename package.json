{
  "name": "morning-pod",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run next dev --turbopack",
    "build": "bun run next build",
    "start": "bun run next start",
    "lint": "bun run next lint",
    "db:generate": "bun run drizzle-kit generate",
    "db:migrate": "bun run drizzle-kit push",
    "db:seed": "bun run scripts/seed.ts",
    "status:update": "node scripts/update-status.js",
    "status:show": "cat STATUS.json | jq '.components'",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:trace": "playwright test --trace=on",
    "test:e2e:video": "playwright test --video=on",
    "test:e2e:coverage": "playwright test --reporter=../src/tests/coverage-reporter.ts",
    "test:e2e:visual": "playwright test --update-snapshots",
    "test:e2e:visual:flags": "playwright test src/tests/e2e/visual-regression-feature-flags.spec.ts --update-snapshots",
    "test:e2e:flags": "playwright test src/tests/e2e/visual-regression-feature-flags.spec.ts",
    "test:e2e:codegen": "playwright codegen localhost:3000",
    "test:performance": "playwright test src/tests/performance",
    "test:all": "bun test && bun test:e2e",
    "test:ci": "bun test:unit && bun test:e2e --workers=1",
    "lint:check": "bun run lint",
    "lint:fix": "bun run lint --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "commitlint": "commitlint --edit",
    "update": "bun update",
    "update:interactive": "bun update --interactive",
    "outdated": "bun outdated",
    "clean": "rm -rf node_modules bun.lockb && bun install",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.0.1",
    "@neondatabase/serverless": "^1.0.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-toast": "^1.2.14",
    "@stagewise/toolbar-next": "^0.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.80.5",
    "@trpc/client": "^11.3.0",
    "@trpc/next": "^11.3.0",
    "@trpc/react-query": "^11.3.0",
    "@trpc/server": "^11.3.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/blob": "^1.1.1",
    "@vercel/speed-insights": "^1.2.0",
    "clsx": "^2.1.1",
    "daisyui": "^5.0.43",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.2",
    "framer-motion": "^12.16.0",
    "geist": "^1.4.2",
    "lucide-react": "^0.513.0",
    "next": "15.3.3",
    "openai": "^5.1.1",
    "posthog-js": "^1.249.3",
    "posthog-node": "^4.18.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query-devtools": "^5.80.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.29",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-react": "^4.5.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "trpc-ui": "^1.0.15",
    "typescript": "^5",
    "vitest": "^3.2.1"
  }
}
